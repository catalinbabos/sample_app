<h1>All users</h1>

<div class="digg_pagination">
    <div clas="page_info">
      <%= page_entries_info %>
    </div>
</div>

<br/>

<%= will_paginate %>

<ul class="users"
  <% @users.each do |user| %>
   <li>
  	<%= gravatar_for user, :size => 30 %>
  	<%= link_to user.name, user %>
  	<% if isAdmin? && user.admin != isAdmin? %>
  	| <%= link_to "delete", user, :method => :delete, 
  								  :confirm => "You Sure?", 
  								  :title => "Delete #{user.name}" %>
  	<% end %>
   </li>
  <% end %>
</ul>

<%= will_paginate %>